{
  "tests": [
    {
      "name": "Register new user successfully",
      "method": "POST",
      "path": "/",
      "body": {
        "email": "newuser@example.com",
        "password": "SecurePass123!"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "message": "Регистрация прошла успешно! Проверьте email для подтверждения."
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Register with taken email",
      "method": "POST", 
      "path": "/",
      "body": {
        "email": "admin@example.com",
        "password": "SecurePass123!"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "success": false,
        "error": "Пользователь с таким email уже существует"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Register with short password",
      "method": "POST",
      "path": "/",
      "body": {
        "email": "testuser@example.com",
        "password": "123"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "success": false,
        "error": "Пароль должен содержать минимум 8 символов"
      },
      "bodyMatcher": "partial"
    }
  ]
}