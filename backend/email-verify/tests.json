{
  "tests": [
    {
      "name": "Send verification email",
      "method": "POST",
      "path": "/",
      "body": {
        "email": "test@example.com",
        "name": "Test User"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "message": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Verify email with token",
      "method": "GET", 
      "path": "/?token=test-token&email=test@example.com",
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "email": "test@example.com"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Missing email parameter",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Test User"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}