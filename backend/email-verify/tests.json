{
  "tests": [
    {
      "name": "Verify email with valid token",
      "method": "GET",
      "path": "/?token=test-token-123456&email=user@example.com",
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "message": "Email успешно подтвержден"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Verify email with missing token",
      "method": "GET", 
      "path": "/?email=user@example.com",
      "expectedStatus": 400,
      "expectedBody": {
        "success": false,
        "error": "Токен и email обязательны"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Verify email with invalid token",
      "method": "GET",
      "path": "/?token=123&email=user@example.com",
      "expectedStatus": 400,
      "expectedBody": {
        "success": false,
        "error": "Неверный токен подтверждения"
      },
      "bodyMatcher": "partial"
    }
  ]
}